{
  "name": "@postqode/cli",
  "version": "0.1.32",
  "description": "Command-line interface for Postqode API testing framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "postqode": "bin/postqode-cli"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "keywords": [
    "postman",
    "openapi",
    "api",
    "cli",
    "converter",
    "collection"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean && mkdir -p dist",
    "build": "npm run build:bundle",
    "build:bundle": "node esbuild.config.js",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "postbuild": "chmod +x bin/postqode-cli && cp package.json README.md LICENSE src/index.d.ts dist/ || true",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm install && npm run clean && npm run build",
    "publish:private": "npm publish --registry https://npm.pkg.github.com",
    "publish:public": "npm publish --registry https://registry.npmjs.org/ --access public"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "js-yaml": "4.1.0",
    "node-fetch": "^2.6.12"
  },
  "devDependencies": {
    "@postqode/core": "0.1.23",
    "@postqode/reporter": "0.1.35",
    "@postqode/runner": "0.1.113",
    "@postqode/schema": "0.1.46",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.12",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "license": "Apache-2.0"
}
